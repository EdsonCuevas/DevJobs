<main class="contenedor">
    <form action="/editar-perfil" method="post" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input value="{{getProp usuario 'nombre'}}" type="text" name="nombre" placeholder="Tu Nombre">
        </div>
        <div class="campo">
            <label>Email</label>
            <input value="{{getProp usuario 'email'}}" type="email" name="email" placeholder="Tu Email">
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Tu Contraseña">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" placeholder="Tu imagen de perfil">
            <img src="/uploads/perfiles/{{getProp usuario 'imagen'}}" class="admin-perfil">
        </div>
        <div class="capo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>